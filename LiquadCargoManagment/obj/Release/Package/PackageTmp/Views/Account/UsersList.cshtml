    <li><a href="javascript:;">Users List</a></li>
</ul>

<!-- END Datatables Header -->
<!-- Datatables Content -->
<div class="block full">
    <div class="block-title row">
        <div class="col-md-12">
            <a id="" class="btn btn-primary btn-sm pull-right" href="@Url.Action("Registration","Account")">Add New | <i class="fa fa-plus"></i></a>
        </div>
    </div>

    <div class="" id="grid">
        @Html.Partial("_UserList")
    </div>
</div>

@section Script{
    <script>
        $(document).ready(function () {
            $("#example").DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ]
            });
        });

        function fnSuccess(response) {
            if (response.Status != "OK") {
                Message("Required", response.Message, "error");
            }
            else {
                $('#modal-add').modal('hide');
                Message("Success", "Record Saved Success", "success");
                $("#grid").html(response.html);
                ClearItem();
                GetOrders();
            }
        }
        function fnFailed(error) {
            window.location.reload();
        }

        function Message(title, text, type) {
            Swal.fire({
                title: title + '!',
                text: text,
                icon: type,
                confirmButtonText: 'OK'
            })
        }
        function GetOrders() {
            $('#example').DataTable();
        }

        function ClearItem() {
            $("input[type='text']").val('');
            $("input[type='hidden']").val('');
        }
