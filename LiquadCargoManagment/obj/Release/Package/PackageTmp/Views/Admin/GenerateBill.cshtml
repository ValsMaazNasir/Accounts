@section Script{
    <script>
        $("#modal-search").modal('show');
    </script>

    <script type="text/javascript">
        //Assign Click event to Plus Image.
        $("body").on("click", "img[src*='plus.png']", function () {
            $(this).closest("tr").after("<tr><td></td><td colspan = '999'>" + $(this).next().html() + "</td></tr>");
            $(this).attr("src", "/assets/images/minus.png");
        });
        //Assign Click event to Minus Image.
        $("body").on("click", "img[src*='minus.png']", function () {
            $(this).attr("src", "/assets/images/plus.png");
            $(this).closest("tr").next().remove();
        });
        $(document).ready(function () {
            GetOrders();
        });
        function GetOrders() {
            $("#example").DataTable();
        }
        //Assign Click event to Plus Image.
        $("body").on("click", "img[src*='plus.png']", function () {
            $(this).closest("tr").after("<tr><td></td><td colspan = '999'>" + $(this).next().html() + "</td></tr>");
            $(this).attr("src", "../assets/images/Minus.jpg");
        });
        //Assign Click event to Minus Image.
        $("body").on("click", "img[src*='Minus.jpg']", function () {
            $(this).attr("src", "/assets/images/plus.png");
            $(this).closest("tr").next().remove();
        });

        function EditChallan(Id) {
            $("#Head").show();
            $("#thead").hide();
            debugger;
            $.ajax({
                url: `../Admin/EditLcmBill`,
                type: 'GET',
                data: { ID: Id },
                success: function (res) {
                    console.log(res.Check);
                    for (var i = 0; i < res.Check.length; i++) {
                        console.log(res.Check[i]);
                        var row = `<tr class='Check'><td hidden><input type='hidden' value='${res.Check[i].ID}' name='ID'></td>
    <td>${res.Check[i].OrderDate}</td>
    <td>${res.Check[i].OrderNo}</td>
    <td>${res.Check[i].Vehicle}</td>
    <td>${res.Check[i].Loading}</td>
    <td>${res.Check[i].GST}</td>
    <td>${res.Check[i].Shipment}</td>
    <td>${res.Check[i].Freight}</td>
    <td><button type='button' class='btn btn-danger btn-xs' onclick="remove(this)"><i class='fa fa-trash'></i></button></td>
    <tr>`;
                        $("#CheckBilty tbody").append(row);
                    }
                    $('#modal-search').modal('show');
                }
            });
            $("#CheckBilty tbody").empty();
        }
        function remove(e) {
            $(e).parent("td").parent("tr").remove();
        }
        function DeleteModel(Id) {
            debugger;
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        url: `../Admin/DeleteLcmBill`,
                        type: 'POST',
                        data: { ID: Id },
                        success: function (res) {
                            if (res.Status != "OK") {
                                Message("Error", res.Message, "error");
                            }
                            else {
                                $("#grid").html(res.html);
                                GetOrders();
                                Message("Success", "Record Deleted Success", "success");
                            }
                        },
                        error: function () {
                            alert('error');
                        }
                    });

                }
            })

        }
    </script>

}

