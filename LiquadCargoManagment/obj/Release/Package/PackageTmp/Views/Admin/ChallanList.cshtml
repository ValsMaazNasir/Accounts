<script src="~/js/Software js/Challan.js"></script>
@section Script
{
    <script>

        $(document).ready(function () {
            $("#ChallanDate").datepicker({
                altField: "#ChallanDate",
                altFormat: "d-M-y",
                changeMonth: true,
                changeYear: true,
                yearRange: "1947:5000"
            });
            GetOrders();
        });

        function GetOrders() {
            $('#example').DataTable({
                "lengthMenu": [[100, 200, 300, 400 - 1], [100, 200, 300, 400, "All"]],
                dom: 'Bfrtip',
                buttons: [
                    //'copyHtml5',
                    {
                        extend: 'copyHtml5',
                        text: '<i class="fa fa-copy"></i> | COPY',
                        titleAttr: 'COPY'
                    },
                    //'excelHtml5',
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fa fa-file-o"></i> | EXCEL',
                        titleAttr: 'Excel'
                    },
                    //'csvHtml5',
                    {
                        extend: 'csvHtml5',
                        text: '<i class="fa fa-file-o"></i> | CSV',
                        titleAttr: 'CSV'
                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fa fa-file-pdf-o"></i> | PDF',
                        titleAttr: 'PDF'
                    },
                    'pageLength'
                ]
            }).order([2, 'des'])
                .draw();
        }
        function remove(e) {
            $(e).parent("td").parent("tr").fadeOut(400, function () { $(this).remove(); });
        }
    </script>
}