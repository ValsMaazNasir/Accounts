        //       }
        //   });
        $.get("http://worldtimeapi.org/api/timezone/Etc/GMT-2", function (response) {
            let time = new Date(response.datetime);
            $(".Time-2").html(time.toLocaleString('en-US', { timeZone: 'Etc/GMT-2', hour: '2-digit', minute: '2-digit', second:"2-digit" }));
        });
    }
    function GetGMT3() {
        $.ajax({
            url: "http://worldtimeapi.org/api/timezone/Etc/GMT-3",
            type: "Get",
            success: function (response) {
                let time = new Date(response.datetime);
                $(".Time-3").html(time.toLocaleString('en-US', { timeZone: 'Etc/GMT-3', hour: '2-digit', minute: '2-digit' }));
            }
        });
    }
    function GetGMT4() {
        $.ajax({
            url: "http://worldtimeapi.org/api/timezone/Etc/GMT-4",
            type: "Get",
            success: function (response) {
                let time = new Date(response.datetime);
                $(".Time-4").html(time.toLocaleString('en-US', { timeZone: 'Etc/GMT-4', hour: '2-digit', minute: '2-digit' }));
            }
        });
    }
    function GetGMT5() {
        //$(".Time-4").html(time.toTimeString(undefined, {
