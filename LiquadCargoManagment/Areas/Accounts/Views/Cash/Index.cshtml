@using LiquadCargoManagment.Areas.Accounts.Helpers;

@{
    Layout = "~/Areas/Accounts/Views/Shared/_Layout1.cshtml";
    ViewBag.AllowAdding = true;
    ViewBag.AllowEditing = true;
    ViewBag.Grouping = true;
    string DataTableColumns = "{ \"data\": \"ID\",\"searchable\": false,\"bSortable\": true,\"bVisible\": false},{ \"data\": \"Code\"},{ \"data\": \"Name\"},{ \"data\": \"AccountsHead\"},{ \"data\": \"TotalBalance\"},{ \"data\": \"Status\"},{ \"data\": \"CreatedDateTime\"},{ \"data\": \"UpdatedDateTime\"}";
    if (ViewBag.AllowAdding != null || ViewBag.AllowEditing != null || ViewBag.AllowDeleting != null)
    {
        ViewBag.DataTableActionColumn = "6";
        DataTableColumns += ",{ \"data\": \"ID\",\"searchable\": false,\"bSortable\": false}";
    }
    ViewBag.DataTableColumns = DataTableColumns;
}
@section LinkStyleSection{
    @Styles.Render("~/assets/accounts/cache/datatablestyle")
}
@section LinkScriptSection{
    @Scripts.Render("~/assets/accounts/cache/datatablescript")
}
@section InLineScriptSection{
    @{Html.RenderPartial("JScript");}
    <script>
        $(document).ready(function () {
            $("#btnAdd").text('Add Cash');
        });
    </script>
}

<!--Page content-->
<!--===================================================-->
<div id="page-content">
    @{Html.RenderPartial("BreadCrumb");}
    <div class="panel">
        <div class="panel-body">
            <table class="table table-striped table-bordered record-table" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Ac</th>
                        <th>Balance</th>
                        <th class="min-desktop">Status</th>
                        <th class="min-desktop">Created</th>
                        <th class="min-desktop">Updated</th>
                        @if (ViewBag.DataTableActionColumn != null)
                        {
                            <th data-priority="2">Actions</th>
                        }
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <!--===================================================-->
    <!-- End Striped Table -->
</div>
<!--===================================================-->
<!--End page content-->