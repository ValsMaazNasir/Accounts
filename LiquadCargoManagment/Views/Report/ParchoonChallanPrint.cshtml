
@model  LiquadCargoManagment.Models.ParchoonBiltyModal

@using LiquadCargoManagment.Models
@using LiquadCargoManagment.Helpers

@{

    Layout = "";
    double CountTotalWeight = 0;
    double CountTotalExpense = 0;
    int otherCharge = 0;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/assets/css/A4.css" rel="stylesheet" />
    <link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/js/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/js/bootstrap.wysihtml5/lib/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .div {
            border-style: groove;
            border-width: 1px;
            border-color: black;
            font-weight: bold;
            width: 120px;
        }

        body {
            background-color: #FFFFFF;
        }

        #tblCustomer {
            border: 1px solid double;
        }

        table .tr {
            margin-top: 0px;
        }

        table .th {
            text-align: center;
        }
    </style>
</head>
<body id="page" class="page" style="font-size:11px; height:700px !important;">
    <table style="width:100%;">
        <tr>
            <td></td>
            @if (Model.lstparchoonchallan.OwnCompany != null)
            {
                <td>
                    <div class="text-center align-text-top" style="font-size:17px !important;font-weight:bold;font-family:Arial Black !important">@Model.lstparchoonchallan.OwnCompany.Name</div>
                    <p class="text-center" style="word-break:break-word; margin-left:10%; margin-right:10%;"> @Model.lstparchoonchallan.OwnCompany.Address</p>
                </td>
            }
            else
            {
                <td >
                    <div class="text-center" style="font-size:17px !important;font-weight:bold;font-family:Arial Black !important"></div>
                </td>
            }
            @if (Model.lstparchoonchallan.OwnCompany != null)
            {
                <td width="10%" align="center">
                    <img src="~/assets/OwnCompanyLogo/@Model.lstparchoonchallan.OwnCompany.CompanyLogo" width="110" height="110" style="padding-bottom:10px" />
                </td>
            }
            else
            {
                <td width="10%" align="center"></td>
            }

        </tr>

        <tr>
            <td width="20%" valign="top">
                @if (Model.lstparchoonchallan.OwnCompany.Contact != null)
                {
                    <div style="font-weight:bold;font-size:13px !important" class="text-center div">
                        Bilty Inquiry<br />@Model.lstparchoonchallan.OwnCompany.Contact
                    </div>
                }
                else
                {
                    <div style="font-weight:bold;font-size:13px !important" class="text-center div">
                        Bilty Inquiry<br />
                    </div>
                }

            </td>
            <td width="60%" class="text-center" style="font-size:18px;font-weight:bold">
                Driver Challan
            </td>
            <!--<td >-->
            @*<div class="text-center" style="font-size:17px !important;font-weight:bold;font-family:Arial Black !important">@Model.lstChallan.OwnCompany.Name</div>*@
            <!--</td>-->
            @if (Model.lstparchoonchallan.ChallanNo != 0)
            {
                <td width="20%">
                    <div style="width:134px;font-size:13px !important" class="text-center div">Customer Copy <br /> Challan# : @Model.lstparchoonchallan.ChallanNo</div>
                </td>
            }
            else
            {
                <td width="20%">
                    <div style="width:134px;font-size:13px !important" class="text-center div">Customer Copy <br /> Challan# : </div>
                </td>
            }

        </tr>
        <tr>
            <td><div><br /></div></td>
        </tr>
        <tr>
            <td colspan="3">
                <div>
                    <table width="100%" style="">
                        <tr>
                            <td width="13%" style="font-weight:bolder">Challan Date</td>
                            @if (Model.lstparchoonchallan.ChallanDate != null)
                            {
                                <td width="11%">@Convert.ToDateTime(Model.lstparchoonchallan.ChallanDate).ToString("dd-MMM-yyyy")</td>
                            }
                            else
                            {
                                <td width="11%"></td>
                            }


                            <td width="13%" style="font-weight:bold">Vehicle Reg#</td>
                            @if (Model.lstparchoonchallan.VehicleID != null)
                            {
                                <td width="12%">@Model.lstparchoonchallan.Vehicle.RegNo</td>
                            }
                            else
                            {
                                <td width="12%"></td>
                            }

                            <td width="13%" style="font-weight:bold">Driver Name</td>
                            @if (Model.lstparchoonchallan.DriverID != null)
                            {
                                <td>@Model.lstparchoonchallan.Driver.Name</td>
                            }
                            else
                            {
                                <td></td>
                            }

                            <td width="13%" style="font-weight:bold">Broker Name</td>
                            @if (Model.lstparchoonchallan.VendorID != null)
                            {
                                <td>@Model.lstparchoonchallan.Vendor.Name</td>
                            }
                            else
                            {
                                <td></td>
                            }

                        </tr>
                        <tr>
                            <td style="font-weight:bold">Manual Challan #</td>
                            @if (Model.lstparchoonchallan.ChallanManualNo != null)
                            {
                                <td>@Model.lstparchoonchallan.ChallanManualNo</td>
                            }
                            else
                            {
                                <td></td>
                            }

                            <td style="font-weight:bold">External Vehicle:</td>
                            @if (Model.lstparchoonchallan.ExternalVehicleNo != null)
                            {
                                <td> @Model.lstparchoonchallan.ExternalVehicleNo</td>
                            }
                            else
                            {
                                <td></td>
                            }

                            <td style="font-weight:bold">Driver Contact:</td>
                            @if (Model.lstparchoonchallan.DriverID != null)
                            {
                                <td>@Model.lstparchoonchallan.Driver.CellNo</td>
                            }
                            else
                            {
                                <td></td>
                            }

                            <td style="font-weight:bold">Broker Contact#</td>
                            @if (Model.lstparchoonchallan.VendorID != null)
                            {
                                <td>@Model.lstparchoonchallan.Vendor.OwnerContactNo</td>
                            }
                            else
                            {
                                <td></td>
                            }
                        </tr>

                        <tr>
                            <td><div><br /></div></td>
                        </tr>
                    </table>
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="3">
                <div style="margin-left:10px; margin-right:10px;">
                    <table id="tblCustomer" class="table-responsive" width="100%" height="150px" border="1">
                        <thead style="border:1px solid black; ">
                            <tr style="text-align: center;">
                                <th class="text-center">Bilty No</th>
                                @*<th class="text-center">Sender Name</th>*@
                                <th class="text-center">Reciever Name</th>
                                <th class="text-center">Product Type</th>
                                <th class="text-center">Product</th>
                                <th class="text-center">Qty</th>
                                <th class="text-center">Wg</th>
                                <th class="text-center">ToPay</th>
                                <th>Paid</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr style="height:30%">

                                @{
                                    double? qtyCount = 0;
                                    double? weightCount = 0;
                                    double? freightcount = 0;
                                }
                                <td>
                                    @foreach (var item in Model.lstparchoonCheckBilty)
                                    {
                                        if (item.ParchoonBilty.BiltyNo != 0)
                                        {
                                            <text> &nbsp;&nbsp;@item.ParchoonBilty.BiltyNo</text><br />
                                        }
                                        else
                                        {
                                            <text></text><br />
                                        }
                                    }

                                </td>
                                @*<td>
                                    @foreach (var item in Model.challanlist)
                                    {
                                        if (item.PickLocationID != null)
                                        {
                                            <span>@item.PickLocation.LocationName</span><br />
                                        }
                                        else
                                        {
                                            <span></span><br />
                                        }

                                    }
                                </td>*@
                                <td>
                                    @foreach (var item in Model.lstparchoonCheckBilty)
                                    {
                                        <span>@item.ParchoonBilty.CustomerCompany.Name</span><br />
                                    }

                                </td>

                                <td>
                                    @foreach (var item in Model.lstparchoonCheckBilty)
                                    {
                                        foreach (var bilty in item.ParchoonBilty.ParchoonBiltyProducts)
                                        {
                                            if (bilty.ProductID != null)
                                            {
                                                <span>&nbsp;&nbsp;@bilty.Product.PackageType.PackageTypeName</span><br />
                                            }
                                            else
                                            {
                                                <span>&nbsp;&nbsp;</span><br />
                                            }
                                        }
                                    }
                                </td>

                                <td>
                                    @foreach (var item in Model.lstparchoonCheckBilty)
                                    {
                                        foreach (var bilty in item.ParchoonBilty.ParchoonBiltyProducts)
                                        {
                                            if (bilty.ProductID != null)
                                            {
                                                <span>&nbsp;&nbsp;@bilty.Product.Name</span><br />
                                            }
                                            else
                                            {
                                                <span>&nbsp;&nbsp;</span><br />
                                            }
                                        }
                                    }
                                </td>

                                <td align="right">
                                    @foreach (var item in Model.lstparchoonCheckBilty)
                                    {
                                        if (item.ParchoonBilty.TotalQty != null)
                                        {
                                            <span>@string.Format(SoftwareFormatting.NumberFormat, item.ParchoonBilty.TotalQty)&nbsp;&nbsp;</span><br />
                                        }
                                        else
                                        {
                                            <span>0&nbsp;&nbsp;</span><br />
                                        }
                                        
                                    }
                                </td>
                                <td align="right">
                                    @foreach (var item in Model.lstparchoonCheckBilty)
                                    {
                                        if (item.ParchoonBilty.NetWeight != null)
                                        {
                                            <span>@string.Format(SoftwareFormatting.NumberFormat, item.ParchoonBilty.NetWeight)&nbsp;&nbsp;</span><br />
                                        }
                                        else
                                        {
                                            <span> &nbsp;&nbsp;</span><br />
                                        }
                                        qtyCount += item.ParchoonBilty.TotalQty;
                                        weightCount += item.ParchoonBilty.NetWeight;
                                        freightcount += item.ParchoonBilty.TotalFreight;

                                    }
                                </td>

                                <td align="right">
                                    @foreach (var item in Model.lstparchoonCheckBilty)
                                    {
                                        if (item.ParchoonBilty.PaymentType == "ToPay")
                                        {
                                            <span>@string.Format(SoftwareFormatting.NumberFormat, item.ParchoonBilty.TotalFreight)&nbsp;&nbsp</span><br />

                                        }
                                        else
                                        {
                                            <span>0 &nbsp;&nbsp;</span><br />
                                        }
                                    }
                                </td>

                                <td>
                                    @foreach (var item in Model.lstparchoonCheckBilty)
                                    {
                                        if (item.ParchoonBilty.PaymentType == "Paid")
                                        {
                                            <span>PAID</span><br />                                         

                                        }
                                        else
                                        {
                                            <span></span><br />
                                        }
                                    }
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="4" class="text-center" style="font-weight:bolder">Total</td>
                                <td align="right"> @string.Format(SoftwareFormatting.NumberFormat, qtyCount)</td>
                                <td align="right"> @string.Format(SoftwareFormatting.NumberFormat, weightCount)</td>
                                <td align="right"> @string.Format(SoftwareFormatting.NumberFormat, freightcount)</td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

            </td>
        </tr>
        <tr>
            <td colspan="8">
                <div>
                    <table width="100%" style="margin-top:70%;">
                        <tbody>
                            <tr>
                                <td>
                                    <p>___________________________</p>
                                    <p style="font-weight:bold; font-size:14px;">Driver Signature</p>
                                </td>
                                <td>
                                    <p>_____________________________</p>
                                    <p style="font-weight:bold; font-size:14px;">Loading Clerk</p>
                                <td width="26%">
                                    <p>_____________________________</p>
                                    <p style="margin-bottom:40px;"></p>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3">
                                    <p class="text-right"><strong>Username&nbsp;&nbsp;&nbsp;&nbsp;:</strong>&nbsp;&nbsp; @ApplicationHelper.Username</p>
                                    @if (Model.lstparchoonchallan.ID != 0)
                                    {
                                        <p class="text-right"><strong>Document# :</strong>&nbsp;&nbsp; @Model.lstparchoonchallan.ID</p>
                                    }
                                    else
                                    {
                                        <p class="text-right"><strong>Document# :</strong></p>
                                    }

                                </td>
                            </tr>
                            @*<tr>
                                    <td colspan="3" align="right">
                                        <p>Username :@ApplicationHelper.Username</p>
                                        @if (Model.lstChallan.ID != null)
                                        {
                                            <p>Document# @Model.lstChallan.ID</p>
                                        }
                                        else
                                        {
                                            <p>Document# </p>
                                        }

                                    </td>
                                </tr>*@
                            <tr>
                                <td><div><br /></div></td>
                            </tr>
                            <tr class="text-center" style="margin-top:100px;">
                                <td colspan="3"><p>Powered by Vals Technologies | www.Valstechnologies.com | UAN: 0304 111 66 88 </p></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </td>
        </tr>

    </table>
    <p style="page-break-after:always"></p>

   
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jspdf.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>

    <script>

            $(document).ready(function () {
                //var pdf = new jsPDF("letter");
                var pdf = new jsPDF('p', 'mm', [297, 210]);
                pdf.setFillColor(17, 22, 22, 1);
                //pdf.canvas.height = 72 * 11;
                //pdf.canvas.width = 72 * 8.5;
                pdf.addHTML(document.body, function () {
                    window.close
                    @*pdf.save('@.OrderNo' + '.pdf');*@
                });
            });

    </script>

    <script type="text/javascript">
            window.print();
    </script>

</body>
</html>








