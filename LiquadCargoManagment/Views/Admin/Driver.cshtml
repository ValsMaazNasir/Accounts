                    return false;
                }
                else {
                    $("#errmsg6").fadeOut("slow");
                    $("#LicenseNo").css("border", "");
                }
            });
        });

        $(document).ready(function () {
            $("#DateOfBirth").datepicker({
                altField: "#DateOfBirth",
                altFormat: "d-M-y",
                changeMonth: true,
                changeYear: true,
                yearRange: "1947:5000"
            });
        });
        $(document).ready(function () {
            $("#LicenseExpiryDate").datepicker({
                altField: "#LicenseExpiryDate",
                altFormat: "d-M-y",
                changeMonth: true,
                changeYear: true,
                yearRange: "1947:5000"
            });
            $("#LicenseIssueDate").datepicker({
                altField: "#LicenseIssueDate",
                altFormat: "d-M-y",
                changeMonth: true,
                changeYear: true,
                yearRange: "1947:5000"
            });
            $("#NICIssueDate").datepicker({
                altField: "#NICIssueDate",
                altFormat: "d-M-y",
                changeMonth: true,
                changeYear: true,
                yearRange: "1947:5000"
            });
            $("#NICExpiryDate").datepicker({
                altField: "#NICExpiryDate",
                altFormat: "d-M-y",
                changeMonth: true,
                changeYear: true,
                yearRange: "1947:5000"
            });
            $("#example").DataTable({
                //dom: 'Bfrtip',
                //buttons: [
                //    'copyHtml5',
                //    'excelHtml5',
                //    'csvHtml5',
                //    'pdfHtml5'
                //]
            });
        });

        function Message(title, text, type) {
            Swal.fire({
                title: title + '!',
                text: text,
                icon: type,
                confirmButtonText: 'OK'
            })
        }

        function GetOrders() {
            $('#example').DataTable();
        }

        function ClearItem() {
            $("input[type='text']").val('');
            $("input[type='checkbox']").val('');
            $("input[type='file']").val('');
            $("input[type='hidden']").val('');
            $("input[type='number']").val('');
            $("input[type='datetime-local']").val('');
            $("input[type='date']").val('');
            $("textarea").val('');
            $("select").val('--Select--');
            $("#Documents").hide();
        }


    </script>
}