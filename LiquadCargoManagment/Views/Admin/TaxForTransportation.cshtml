                //    'pdfHtml5'
                //]
            });
        });

        function Message(title, text, type) {
            Swal.fire({
                title: title + '!',
                text: text,
                icon: type,
                confirmButtonText: 'OK'
            })
        }
        function GetOrders() {
            $('#example').DataTable();
        }

        function ClearItem() {
            $("input[type='text']").val('');
            $("input[type='hidden']").val('');
            $("input[type='number']").val('');
            $("textarea").val('');
            $("select").val('');
        }

    </script>
}